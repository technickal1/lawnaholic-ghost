{{!< default}}

{{!-- Page 404 --}}
<div class="page__hdr flex flex-cc flex-col m-b-lg">
  <h1>{{t "404 Error"}}</h1>

  <div class="err m-b">
    <div class="err__descr m-b color-txt-acc-3 text-center">
      {{t "Something went wrong! We can't seem to find the page you are looking for"}}
    </div>

    {{!-- Links to home and contact page --}}
    <div class="err__links flex flex-cc">
      <a class="btn btn--filled m-r" href="/">
        {{t "Home"}}
      </a>
      <a class="btn btn--filled" href="javascript:history.back()">
        {{t "Back"}}
      </a>
    </div>
  </div>
</div>

<div class="container wrapper">
  <div class="err__recommend">
    <div class="section__title m-b">{{t "Explore topics"}}</div>
    
    {{#get "tags" limit="4" include="count.posts" order="count.posts desc"}}
      <div class="row">
      {{#foreach tags}}
        <div class="col-xs-12 col-sm-6 col-lg-3">
          {{> tag-card img=true class="m-b-lg small-img"}}
        </div>
      {{/foreach}}
      </div>
    {{/get}}

    <div class="section__title m-b">{{t "Latest posts"}}</div>
    
    {{#get "posts" limit="3" include="tags,authors" limit=@config.posts_per_page}}
    <div class="section">
      <div class="row">
        {{#foreach posts visibility="all"}}
          <div class="col-xs-12 col-md-6 col-lg-4">
            {{> post-card class="h-100"}}
          </div>
        {{/foreach}}
      </div>
    </div>
    {{/get}}

  </div>
</div>