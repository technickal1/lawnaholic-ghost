<div class="page__hdr m-b-lg">
  <div class="container wrapper flex flex-cc">
    <div class="page__body flex-1">
      <h1 class="page__title text-center">{{title}}</h1>
      {{#if custom_excerpt}}
        <div class="page__excerpt m-b m-t text-acc-3 text-center text-lg">{{custom_excerpt}}</div>
      {{/if}}
    </div>

    {{!-- Post image --}}
    {{#if feature_image}}
      <figure class="page__img">
        <img
          srcset="{{img_url feature_image size="s"}} 300w,
                  {{img_url feature_image size="m"}} 600w,
                  {{img_url feature_image size="l"}} 1000w,
                  {{img_url feature_image size="xl"}} 2000w"
          sizes="(max-width: 800px) 400px,
                  (max-width: 1170px) 700px,
                  1400px"
          src="{{img_url feature_image size="s"}}"
          alt="{{title}}"
        />
      </figure>
    {{/if}}
  </div>
</div>