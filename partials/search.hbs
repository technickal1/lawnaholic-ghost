{{!-- Blog search --}}
<div class="search" id="search">
  <div class="search__hdr">
    <form action="/" method="get" class="search__form items-center bg-acc-2 js-search-form">
      <input type="text" id="ghost-search-field" class="search__input" aria-labelledby="search"
        title="{{t "Search"}}" placeholder="{{t "Search"}}" autocomplete="off" required/>
      <div class="search__icon">
        {{>icon name="search" size="sm"}}
      </div>
    </form>
    <button tabindex="0" class="search--close bg-acc-2 js-search-close"
      title="{{t "Close"}}" aria-label="{{t "Close"}}">
        {{>icon name="x" size="sm"}}
    </button>
  </div>
  <div class="search-helper">
    {{#get "tags" limit="6" include="count.posts" order="count.posts desc"}}
      {{#foreach tags}}
        <button class="search__tag m-r-sm m-b-sm js-search-tag" tabindex="0" aria-label="{{name}}">{{name}}</button>
      {{/foreach}}
    {{/get}}
  </div>
  <div class="search-content">
    <div class="search-result" id="ghost-search-results"></div>
  </div>
</div>
